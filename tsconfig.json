{
	"compilerOptions": {
		"allowJs": true,
		"noEmit": true,
		"isolatedModules": false,
		"moduleResolution": "Node",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"target": "es6",
		"lib": ["es6", "dom"],
		"types": ["cypress", "@testing-library/cypress"]
	},
	"include": ["**/*.ts"],
	"exclude": ["node_modules"]
}
